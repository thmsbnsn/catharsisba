---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import ArtistCard from "../../components/ArtistCard.jsx";

// Grab all artist markdown entries
const artists = await getCollection("artists");

// Helper to try importing a manifest file by slug
async function loadManifest(slug) {
  try {
    const mod = await import(`../../image-manifests/${slug}.json`);
    return mod.default;
  } catch {
    return [];
  }
}

// Build enriched artist data
const artistData = [];
for (const a of artists) {
  const slug = a.slug;
  const manifest = await loadManifest(slug);
  const hero =
    manifest.find((img) => img.folder.includes("profile-images")) ||
    manifest[0] ||
    null;
  artistData.push({
    slug,
    ...a.data,
    manifest,
    hero,
  });
}
---

<BaseLayout
  title="Meet the Artists"
  description="Craft, intent, precision. Our artists, one standard."
>
  <section class="relative card p-8 sm:p-10 bg-white text-black">
    <div
      class="absolute left-3 top-2 text-[10vw] sm:text-8xl font-black text-red-800/10 select-none"
      aria-hidden="true"
    >
      01
    </div>
    <header class="relative">
      <h1 class="font-serif text-4xl sm:text-5xl">Meet the Artists</h1>
      <p class="text-black/70">
        Craft, intent, and precision. Each artist brings their own focus.
      </p>
    </header>
  </section>

  <section class="mt-6 grid gap-6 md:grid-cols-2">
  {artistData.map((artist) => (
    <div class="h-full">
      <ArtistCard artist={artist} variant="compact" client:load />
    </div>
  ))}
</section>
</BaseLayout>
