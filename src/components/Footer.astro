---
import Icon from './Icon.jsx';
---

<footer class="footer">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Contact Info -->
      <div class="footer-section">
        <h3 class="footer-title">Contact</h3>
        <div class="footer-content">
          <p class="footer-text">
            <Icon id="location" className="w-4 h-4 inline mr-2" />
            5801 N. Green St. Suite 106<br>
            Brownsburg, IN 46112
          </p>
          <p class="footer-text">
            <Icon id="phone" className="w-4 h-4 inline mr-2" />
            <a href="tel:3172867092" class="footer-link">(317) 286-7092</a>
          </p>
          <p class="footer-text">
            <Icon id="email" className="w-4 h-4 inline mr-2" />
            <a href="mailto:info@catharsisba.com" class="footer-link">info@catharsisba.com</a>
          </p>
        </div>
      </div>

      <!-- Hours -->
      <div class="footer-section">
        <h3 class="footer-title">Hours</h3>
        <div class="footer-content">
          <p class="footer-text">Mon - Thu: 12pm - 8pm</p>
          <p class="footer-text">Fri - Sat: 12pm - 9pm</p>
          <p class="footer-text">Sunday: Closed</p>
          <p class="footer-text text-sm text-white/60 mt-2">
            Walk-ins welcome, appointments preferred
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h3 class="footer-title">Quick Links</h3>
        <div class="footer-content">
          <nav class="footer-nav">
            <a href="/artists" class="footer-link">Artists</a>
            <a href="/gallery" class="footer-link">Gallery</a>
            <a href="/events" class="footer-link">Events</a>
            <a href="/faq" class="footer-link">FAQ</a>
            <a href="/aftercare" class="footer-link">Aftercare</a>
            <a href="/contact" class="footer-link">Book Appointment</a>
          </nav>
        </div>
      </div>

      <!-- Map -->
      <div class="footer-section">
        <h3 class="footer-title">Find Us</h3>
        <div class="footer-content">
          <div class="footer-map">
            <iframe
              src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD1aKFdW9da9-f_ykUGZaNUVSdMeNwrz2I&q=5801+N.+Green+St.+Suite+106,+Brownsburg,+IN+46112"
              width="100%"
              height="200"
              style="border:0; border-radius: 8px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Catharsis Body Art Location"
            ></iframe>
          </div>
          <button id="get-directions-btn" class="btn-cta mt-4 w-full">
            Get Directions
          </button>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-8 border-t border-white/20">
        <div class="footer-brand">
          <a href="/" class="flex items-center gap-3 group">
            <picture>
              <source srcSet="/images/branding/cba-logo-nobackground.avif" type="image/avif" />
              <img
                src="/images/branding/cba-logo-nobackground.webp"
                alt="Catharsis Body Art"
                class="h-8 w-auto drop-shadow transition-transform duration-200 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
            </picture>
            <span class="font-display text-lg font-bold tracking-wider text-white">
              Catharsis Body Art
            </span>
          </a>
        </div>
        
        <div class="footer-legal">
          <nav class="flex flex-wrap gap-4 text-sm">
            <a href="/privacy" class="footer-link-small">Privacy</a>
            <a href="/terms" class="footer-link-small">Terms</a>
            <a href="/cookies" class="footer-link-small">Cookies</a>
            <a href="/accessibility" class="footer-link-small">Accessibility</a>
          </nav>
        </div>

        <div class="footer-social">
          <div class="flex gap-3">
            <a href="https://instagram.com/catharsisbodyart" class="footer-social-link" aria-label="Instagram">
              <Icon id="instagram" className="w-5 h-5" />
            </a>
            <a href="https://facebook.com/catharsisbodyart" class="footer-social-link" aria-label="Facebook">
              <Icon id="facebook" className="w-5 h-5" />
            </a>
          </div>
        </div>
      </div>
      
      <div class="text-center pt-4">
        <p class="text-sm text-white/60">
          Â© {new Date().getFullYear()} Catharsis Body Art. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    @apply bg-black/80 backdrop-blur-sm text-white relative;
    background: linear-gradient(135deg, rgba(0,0,0,0.9) 0%, rgba(20,20,20,0.8) 100%);
  }

  .footer-section {
    @apply space-y-3;
  }

  .footer-title {
    @apply font-display text-lg font-bold tracking-wider text-white mb-3;
  }

  .footer-content {
    @apply space-y-2;
  }

  .footer-text {
    @apply text-white/80 text-sm leading-relaxed;
  }

  .footer-link {
    @apply text-white/80 hover:text-white transition-colors duration-200 underline decoration-white/40 hover:decoration-white;
  }

  .footer-link-small {
    @apply text-white/60 hover:text-white/80 transition-colors duration-200 text-xs;
  }

  .footer-nav {
    @apply flex flex-col space-y-2;
  }

  .footer-map {
    @apply rounded-lg overflow-hidden;
    filter: grayscale(20%) contrast(1.1);
    transition: filter 0.3s ease;
  }

  .footer-map:hover {
    filter: grayscale(0%) contrast(1);
  }

  .footer-social-link {
    @apply text-white/60 hover:text-white transition-colors duration-200 p-2 rounded-full hover:bg-white/10;
  }

  .footer-bottom {
    @apply mt-8;
  }

  .footer-brand img {
    @apply filter drop-shadow-lg;
  }

  /* Footer alignment fixes */
  .footer-section:first-child .footer-content {
    @apply text-center md:text-left;
  }

  .footer-legal nav {
    @apply justify-center md:justify-start;
  }

  /* Mobile centering for small buttons */
  @media (max-width: 768px) {
    .footer-legal {
      @apply text-center;
    }
    
    .footer-legal nav {
      @apply justify-center;
    }
  }
</style>
