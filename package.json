{
  "name": "catharsisba",
  "private": true,
  "type": "module",
  "scripts": {
    "gen:images": "node src/scripts/gen-image-manifests.mjs",
    "build": "npm run gen:images && astro build",
    "deploy:staging": "npm run build && git add -A && (git commit -m \"staging: deploy\" || echo \"no changes to commit\") && git push origin HEAD:staging --force",
    "deploy:staging:local": "npm run build && npm run deploy:staging",
    "deploy:production": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-hostinger-winscpnet.ps1 production",
    "deploy:staging:dry": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-hostinger-winscpnet.ps1 staging -DryRun",
    "deploy:production:dry": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-hostinger-winscpnet.ps1 production -DryRun",
    "deploy:local:staging": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-winscp-final.ps1 staging",
    "deploy:local:production": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-winscp-final.ps1 production",
    "deploy:local:staging:dry": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-simple.ps1 staging -DryRun",
    "deploy:local:production:dry": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-simple.ps1 production -DryRun",
    "deploy:local:staging:skip": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-local.ps1 staging -SkipBuild",
    "deploy:local:production:skip": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-local.ps1 production -SkipBuild"
  },
  "dependencies": {
    "@astrojs/react": "^4.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/vercel": "^9.0.0",
    "@headlessui/react": "^2.1.8",
    "@portabletext/to-html": "^2.0.2",
    "@sanity/client": "^6.21.2",
    "@sanity/image-url": "^1.0.2",
    "@vercel/analytics": "^1.5.0",
    "astro": "^5.0.0",
    "framer-motion": "^12.23.16",
    "groq": "^3.50.1",
    "photoswipe": "^5.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swiper": "^11.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "image-size": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4"
  }
}
